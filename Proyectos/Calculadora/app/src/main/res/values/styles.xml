<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_marginStart">@dimen/common_paddin_min</item>
        <item name="android:onClick">onClickButton</item>
    </style>

    <style name="myButtonBig">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">50</item>
        <item name="android:textSize">@dimen/calc_btn_text_size</item>
        <item name="android:layout_marginStart">@dimen/common_paddin_min</item>
        <item name="android:onClick">onClickButton</item>
    </style>

    <style name="ButtonNumeric" parent="myButtonBase">
        <item name="android:backgroundTint">@color/teal_800</item>
    </style>

    <style name="ButtonOperators" parent="myButtonBase">
        <item name="android:backgroundTint">@color/blue_900</item>
    </style>

    <style name="ButtonExtras" parent="myButtonBase">
        <item name="android:backgroundTint">@color/light_blue_800</item>
    </style>

    <style name="ButtonBigResolve" parent="myButtonBig">
        <item name="android:backgroundTint">@color/light_blue_800</item>
    </style>
    <style name="ButtonBigClear" parent="myButtonBig">
        <item name="android:backgroundTint">@color/red_500</item>
    </style>
    <style name="RoundedButton">
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="MyLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/common_paddin_min</item>
        <item name="layout_constraintDimensionRatio">H, 4:1</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <style name="MyTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/common_paddin_min</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:background">?colorSurface</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

</resources>